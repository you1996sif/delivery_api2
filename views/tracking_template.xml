 <?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="delivery_tracking_template" name="Delivery Tracking">       
        <record id="email_template_tracking_link" model="mail.template">
            <field name="name">Invoice: Tracking Information</field>
            <field name="model_id" ref="account.model_account_move"/>
            <field name="subject">Delivery Tracking Information for Invoice ${object.name}</field>
            <field name="email_from">${user.email_formatted | safe}</field>
            <field name="partner_to">${object.partner_id.id}</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p>Dear ${object.partner_id.name},</p>
                    <p>You can track your delivery using the following link:</p>
                    <p>
                        <a href="/delivery/track/${object.unique_number}" style="background-color: #875A7B; padding: 8px 16px; text-decoration: none; color: #fff; border-radius: 5px; font-size:13px;">
                            Track Your Delivery
                        </a>
                    </p>
                    <br/>
                    <p>Thank you for your business!</p>
                </div>
            </field>
        </record>
    </template>
</odoo>